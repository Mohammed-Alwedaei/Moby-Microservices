<div class="card shadow-lg rounded-3 p-3 border-0">
    <div class="rounded-3 overflow-hidden">
        <img class="card-img-top" src="@Product.ImageUrl" />
    </div>

    <div class="card-body px-0">
        <h3 class="card-title">@Product.Name</h3>

        <p class="card-text lead text-secondary">@Product.Category</p>
        <p class="card-text lead text-secondary">@Product.Price.ToString("c")</p>
    </div>

    <div class="card-footer border-0 bg-white p-0">
        <button class="btn btn-primary">Add to cart</button>
        <a class="btn btn-secondary" href="/Products/Details?productid=@Product.Id">Details</a>
    </div>
</div>

@code {
    [Parameter]
    public ProductDto Product { get; set; }
}
